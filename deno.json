{
  "tasks": {
    "test": "deno test --allow-net --allow-env",
    "test:cov": "deno test -A --coverage=coverage && deno coverage ./coverage --lcov --output=coverage.lcov",
    "cache": "deno cache ./deps.ts"
  },
  "fmt": {
    "files": {
      "exclude": ["*.md", "LICENSE", "*.json"]
    },
    "options": {
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false
    }
  },
  "lint": {
    "files": {
      "exclude": ["*.md", "LICENSE", "*.json"]
    }
  }
}
